	{{#if performedSchoolSearch}}
		{{#if schoolFound}}
            {{#each school in schoolFound}}
                <div class="school-details" id="school-name-found">
                    <table class="school-details-table">
                            <thead><h2>School Details</h2></thead>
                            <tr>
                                <td class="school-detail">EMIS No</td>
                                <td class="school-name-input">{{school.emis}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Name</td>
                                <td class="school-name-input">{{school.name}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Address</td>
                                <td class="school-name-input">{{school.street_address}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Town/City</td>
                                <td class="school-name-input">{{school.town}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Province</td>
                                <td class="school-name-input">{{school.province_code}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Number of Boys</td>
                                <td class="school-name-input">{{school.no_of_boys}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Number of Girls</td>
                                <td class="school-name-input">{{school.no_of_girls}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Total Toilets</td>
                                <td class="school-name-input">{{school.total_toilets}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Running Water</td>
                                <td class="school-name-input">{{school.running_water}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Matric Pass Rate (%)</td>
                                <td class="school-name-input">{{school.pass_rate}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Matric Students Wrote</td>
                                <td class="school-name-input">{{school.wrote}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Matric Students Passed</td>
                                <td class="school-name-input">{{school.passed}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Latitude</td>
                                <td class="school-name-input">{{school.lat}}</td>
                            </tr>
                            <tr>
                                <td class="school-detail">Longitude</td>
                                <td class="school-name-input">{{school.lng}}</td>
                            </tr>
                        </table>
                    </div>
                {{/each}}
		{{else}}
			<div class="school-details" id="school-name-not-found">
			<h3>No school found</h3>
		{{/if}}
	{{/if}}
</div>

